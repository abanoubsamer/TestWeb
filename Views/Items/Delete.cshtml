@model TestItemcs
@{
    ViewData["Title"] = "Delete";
}

<form method="post">


    <div class=" border p-3 mt-4">
        <div class=" row p-2 ">
            <h2 class=" text-primary">
                Delete Item
            </h2>
            <hr />
            <div asp-validation-summary="All"></div>
            <div class=" mb-3 ">
                <label asp-for="Name"></label>
                <input asp-for="Name" disabled class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class=" mb-3 ">
                <label asp-for="Price"></label>
                <input asp-for="Price" disabled class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class=" mb-3 ">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" disabled class="form-control" asp-items="@ViewBag.CategoryList" required>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <br />
            <hr />
            <div class=" mb-3 ">
                <button type="submit" class="btn btn-danger" style="border-radius: 10px; width:250px;">
                    <i class="bi bi-trash-fill"></i> &nbsp; Delete Item
                </button>

                <a asp-action="Index" asp-controller="items" class=" btn btn-primary" style="border-radius: 10px; width:250px;">
                    <i class="bi bi-skip-backward-circle-fill"></i>&nbsp; Back To Item
                </a>
            </div>


        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
